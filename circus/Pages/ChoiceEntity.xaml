<Page x:Class="circus.Pages.ChoiceEntity"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:circus.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChoiceEntity">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Image Width="300" Source="\Images\choice.jpg"/>
            <TextBlock HorizontalAlignment="Center" Text="Кого добавить?"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="PeopleBt" Width="100" Height="200" Margin="0,0,100,0" Click="PeopleBt_Click">
                <Image Source="\Images\employee.jpg"/>
            </Button>
            <Button Name="AnimalBt" Width="100" Height="200" Click="AnimalBt_Click">
                <Image Source="\Images\animal.jpg"/>
            </Button>
        </StackPanel>

    </Grid>
</Page>
