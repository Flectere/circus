<Page x:Class="circus.Pages.EnterTaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:circus.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EnterTaskPage"
      Foreground="White">

    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Задание: "></TextBlock>
                <TextBlock Name="NameTaskTb" Margin="0 0 0 10"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="0 0 5 0">Комментарий:</TextBlock>
                <TextBox 
                     Width="200"
                     Height="100"
                     Name="CommentTb"
                     Foreground="Black"></TextBox>
            </StackPanel>
            <Button Name="FinishTaskBt"
                    Margin="10"
                    Width="100" Click="FinishTaskBt_Click">ВЫПОЛНИТЬ</Button>
        </StackPanel>
    </Grid>
</Page>
